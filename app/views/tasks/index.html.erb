<h1>Tasks#index</h1>

<%= link_to "Add a new task", new_task_path %>

<% @tasks.each do |task| %>
  <h2>
    <%= link_to task.title, task_path(task.id) %>
  </h2>
  <p>
    <small>
      <%= link_to "Edit", edit_task_path(task.id) %>
    </small>
  </p>
  <p>
    <small>
      <%= link_to "Delete", delete_task_path(task.id),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    </small>
  </p>

<% end %>
